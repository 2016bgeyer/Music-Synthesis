{
    "name": "Chord_Only_BiLSTM_big",
    "n_gpu": 1,
    "model": {
        "name": "BigMidiLSTM",
        "args": {
            "vocab_size": 14,
            "embed_size": 8,
            "hidden_size": 512,
            "num_layers": 2,
            "dropout": 0.2,
            "bidirectional": true
        }
    },
    "data_loader": {
        "name": "MidiDataLoader",
        "args": {
            "data_path": "data/out.pkl",
            "batch_size": 32,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "collate_fn": "midi_collate_fn",
    "test_data_loader": {
        "name": "MidiDataLoader",
        "args": {
            "data_path": "data/out.pkl",
            "batch_size": 32,
            "shuffle": false,
            "validation_split": 0.0,
            "num_workers": 2
        }
    },
    "test_collate_fn": "midi_collate_fn",
    "optimizer": {
        "name": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "midi_loss_chord_only",
    "metrics": [
        "melody_accuracy",
        "melody_accuracy_topk",
        "chord_accuracy",
        "chord_accuracy_topk"
    ],
    "lr_scheduler": {
        "name": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboardX": true,
        "log_dir": "saved/runs"
    }
}